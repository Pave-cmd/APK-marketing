<!-- Nadpis stránky -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Správa příspěvků</h1>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPostModal">
        <i class="fas fa-plus me-2"></i> Nový příspěvek
    </button>
</div>

<!-- Statistiky příspěvků -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Celkem příspěvků</h5>
                <p class="card-text display-6">0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Publikováno</h5>
                <p class="card-text display-6 text-success">0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Naplánováno</h5>
                <p class="card-text display-6 text-warning">0</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Koncept</h5>
                <p class="card-text display-6 text-info">0</p>
            </div>
        </div>
    </div>
</div>

<!-- Přehled příspěvků -->
<div class="card">
    <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Přehled příspěvků</h5>
            <div>
                <select class="form-select form-select-sm" id="filterPosts">
                    <option value="all">Všechny příspěvky</option>
                    <option value="published">Publikované</option>
                    <option value="scheduled">Naplánované</option>
                    <option value="draft">Koncepty</option>
                </select>
            </div>
        </div>
    </div>
    <div class="card-body p-0">
        <div id="postsList" class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>Náhled</th>
                        <th>Text příspěvku</th>
                        <th>Sociální sítě</th>
                        <th>Stav</th>
                        <th>Datum publikace</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody id="postsTableBody">
                    <!-- Sem se dynamicky vloží příspěvky -->
                </tbody>
            </table>
        </div>
        <div id="emptyPostsMessage" class="text-center py-5">
            <i class="fas fa-pen-fancy fa-3x text-muted mb-3"></i>
            <p class="lead">Zatím nemáte žádné příspěvky</p>
            <p class="text-muted">Vytvořte svůj první příspěvek nebo počkejte, až systém vygeneruje automatické příspěvky.</p>
            <button class="btn btn-primary mt-2" data-bs-toggle="modal" data-bs-target="#createPostModal">
                <i class="fas fa-plus me-2"></i> Vytvořit první příspěvek
            </button>
        </div>
    </div>
</div>

<!-- Kalendář plánování -->
<div class="card mt-4">
    <div class="card-header bg-white">
        <h5 class="mb-0">Kalendář publikací</h5>
    </div>
    <div class="card-body">
        <div id="postCalendar">
            <!-- Zde bude kalendář s naplánovanými příspěvky -->
            <div class="text-center text-muted py-4">
                <i class="fas fa-calendar-alt fa-3x mb-3"></i>
                <p>Kalendář bude dostupný po vytvoření prvního příspěvku</p>
            </div>
        </div>
    </div>
</div>

<!-- Modal pro vytvoření příspěvku -->
<div class="modal fade" id="createPostModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="createPostForm">
                <div class="modal-header">
                    <h5 class="modal-title">Vytvořit nový příspěvek</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="postWebsite" class="form-label">Web k propagaci</label>
                        <select class="form-select" id="postWebsite" required>
                            <option value="">Vyberte web</option>
                            <!-- Dynamicky načtené weby -->
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="postContent" class="form-label">Text příspěvku</label>
                        <textarea class="form-control" id="postContent" rows="4" required placeholder="Napište text příspěvku..."></textarea>
                        <div class="form-text">
                            <span id="charCount">0</span> / 280 znaků (Twitter limit)
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Sociální sítě</label>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="postFacebook">
                                    <label class="form-check-label" for="postFacebook">
                                        <i class="fab fa-facebook text-primary"></i> Facebook
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="postTwitter">
                                    <label class="form-check-label" for="postTwitter">
                                        <i class="fab fa-twitter text-info"></i> Twitter
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="postLinkedIn">
                                    <label class="form-check-label" for="postLinkedIn">
                                        <i class="fab fa-linkedin text-primary"></i> LinkedIn
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="postImage" class="form-label">Obrázek</label>
                        <input type="file" class="form-control" id="postImage" accept="image/*">
                        <div class="mt-2" id="imagePreview"></div>
                    </div>
                    
                    <div class="mb-3">
                        <label for="postScheduleDate" class="form-label">Datum publikace</label>
                        <input type="datetime-local" class="form-control" id="postScheduleDate">
                        <div class="form-text">Pokud necháte prázdné, příspěvek bude publikován okamžitě</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">AI generování</label>
                        <button type="button" class="btn btn-outline-primary btn-sm" id="generateContent">
                            <i class="fas fa-robot me-2"></i> Vygenerovat obsah pomocí AI
                        </button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zrušit</button>
                    <button type="button" class="btn btn-outline-primary" id="saveAsDraft">
                        <i class="fas fa-save me-2"></i> Uložit jako koncept
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane me-2"></i> Publikovat
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- JavaScript pro správu příspěvků -->
<script src="/js/posts-manager.js"></script>