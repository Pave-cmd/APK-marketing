# MongoDB connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname

# JWT Settings
JWT_SECRET=your-jwt-secret-key

# App Settings
APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=http://localhost:3000/api/social-networks/callback/facebook

# Twitter/X API Credentials
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-app-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-app-access-token-secret
TWITTER_REDIRECT_URI=http://localhost:3000/api/social-networks/callback/twitter
# Note: Twitter API requires OAuth 1.0a for user context operations
# Create a Twitter Developer account at https://developer.twitter.com/

# Instagram (uses Facebook)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# LinkedIn OAuth 2.0
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/api/social-networks/callback/linkedin
# Note: LinkedIn requires r_liteprofile, r_emailaddress, w_member_social scopes for posting
# Create a LinkedIn Developer App at https://www.linkedin.com/developers/

# OpenAI API for content generation
OPENAI_API_KEY=your-openai-api-key
# Note: Uses GPT-4 by default, but can be configured to use different models